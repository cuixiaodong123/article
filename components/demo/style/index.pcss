.article-container {
    width: 60%;
    margin: 0 auto;
    &>h1{
        width: 100%;
        text-align: center;
    }
    &>.subheader{
        width: calc(100% - 40px);
        padding: 0 20px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-around;
    }
    &>.content{
        font-size: 18px;
        text-indent: 2em;
    }
}